{
  "manifest_version": 3,
  "name": "Spitogatos Extractor",
  "version": "1.0",
  "description": "Extracts all images from a spitogatos.gr listing and allows downloading them in bulk.",
  "permissions": ["scripting", "tabs", "activeTab", "downloads", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Extract Images from Spitogatos"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "spitogatos-extractor@catenery.com"
    }
  }
}
